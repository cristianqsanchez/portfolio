---
interface Props {
  title: string
  name: string
  description: string
  tech: string
}

const {title, name, description, tech} = Astro.props
---

<div
  class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5 border border-blue-300 bg-blue-300"
>
</div>
<div
  class="mb-1 text-sm font-normal leading-none text-gray-800 light:text-sky-200/80"
>
{name}
</div>
<h3 class="text-lg font-semibold text-black-800 light:text-yellow-200 mt-2">
  {title}
</h3>
<p class="mb-4 text-base font-normal light:text-gray-200 text-pretty">
  {description}
</p>
<h4 class="text-sm font-semibold text-black-800 light:text-yellow-200 mt-2">
  Tech Stack
</h4>
<p class="mb-4 text-base font-normal light:text-gray-200 text-pretty">
  {tech}
</p>